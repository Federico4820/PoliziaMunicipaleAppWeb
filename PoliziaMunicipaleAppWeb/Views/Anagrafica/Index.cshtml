@{
    ViewData["Title"] = "Anagrafica";
}

<h2>Anagrafica</h2>
<p>Visualizza, aggiungi o modifica i trasgressori.</p>

<table class="table">
    <thead>
        <tr>
            <th>Cognome</th>
            <th>Nome</th>
            <th>Indirizzo</th>
            <th>Città</th>
            <th>CAP</th>
            <th>Codice Fiscale</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Cognome</td>
                <td>@item.Nome</td>
                <td>@item.Indirizzo</td>
                <td>@item.Citta</td>
                <td>@item.CAP</td>
                <td>@item.Cod_Fisc</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdAnagrafica">Modifica</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdAnagrafica">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Aggiungi Trasgressore</a>